@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<LandingPage>

@{
	Layout = "Main.cshtml";
}
<div>
	@await Html.PartialAsync("Partials/homePage/_navigation.cshtml")
</div>
<div class="jumbotron text-center">

	<h1 class="display-4">Bienvenido a nuestro sitio</h1>
	<p class="lead">Este texto es un placeholder</p>
	<hr class="my-4">

	<div class="mt-3">
		@await Html.PartialAsync("Partials/homePage/_redirectButton")
	</div>
	<div class="mt-3">
		@await Html.PartialAsync("Partials/homePage/_imageCarousel")
	</div>
	<div class="mt-3">
		@{
			@await Html.PartialAsync("Partials/blocklistItems/_embededVideo.cshtml", Model.EmbededVideo.Content)
		}
	</div>
	<div class="mt-3">
		@await Html.PartialAsync("Partials/homePage/_newsCarousel")
	</div>
	<div class="mt-3">
		@Model.RichTextAndImages?.Count
		@{
			var textAndImageBlocks = Model.RichTextAndImages;

			foreach (var block in textAndImageBlocks)
			{
				@await Html.PartialAsync("Partials/_textAndImage", block.Content)
			}
		}
	</div>
</div>
<div class="mt-3">
	@await Html.PartialAsync("Partials/homePage/_footer")
</div>
</div>
