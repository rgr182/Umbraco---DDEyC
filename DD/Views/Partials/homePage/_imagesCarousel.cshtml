@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@using Umbraco.Cms.Core.Models.Blocks;
@{
    var blocks = Model.Value<IEnumerable<BlockListItem>>("imageCarousel");
    var blocksList = blocks.ToList();
}

<head>
    <link href="~/Styles/ImageCarousel.css" rel="stylesheet" />
</head>

<div id="imageCarousel" class="carousel slide" data-bs-ride="">
    <ol class="carousel-indicators">
        @for (int a = 0; a < blocksList.Count; a++)
        {
            <li data-bs-target="#imageCarousel" data-bs-slide-to="@a" class="@(a == 0 ? "active" : "")"></li>
        }
    </ol>
    <div class="carousel-inner">
        @for (int i = 0; i < blocksList.Count; i++)
        {
            var block = blocksList[i];
            var content = (ContentModels.ImageCarouselItem)block.Content;
            var isFirst = i == 0;
            <div class="carousel-item @(isFirst ? "active" : "")">
                <div class="carousel-item-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="carousel-item-text">
                                <p>@content.ImageCarouselTextItem</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="carousel-item-media">
                                <a href="@content.ImageCarouselItemURL.Url">
                                    <img src="@content.ImageCarouselItem.Url()" class="d-block w-100" alt="...">
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
