@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Web.Common.PublishedModels

<footer style="padding: 20px;">
    <div class="footer-top" style="margin-bottom: 10px;">
        @((string)Model.Value("footerText")) <!-- Accessing property directly -->
    </div>
    <div class="footer-elements" style="margin-bottom: 10px;">
        @{
            var elements = Model.Value<IEnumerable<IPublishedElement>>("elements");
            if (elements != null)
            {
                foreach (var element in elements)
                {
                    var image = element.Value<string>("image");
                    var title = element.Value<string>("title");
                    var link = element.Value<string>("link");
                    var description = element.Value<string>("description");

                    <div class="element" style="margin-bottom: 10px;">
                        <img src="@image" alt="@title" style="max-width: 100px;">
                        <h3><a href="@link">@title</a></h3>
                        <p>@description</p>
                    </div>
                }
            }
        }
    </div>
    <div class="footer-contact">
        @((string)Model.Value("contactInfo")) <!-- Accessing property directly -->
    </div>
</footer>

