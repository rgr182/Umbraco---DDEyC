@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;

@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.RichTextAndImageItems>
@{
     var TextStyle = string.Empty;
     var TitleStyle = string.Empty;
      if (Model.RichTextAndImageTextSize > 0)
        {
            TextStyle += $"font-size:{Model.RichTextAndImageTextSize}px;";
        }else{
            TextStyle += $"font-size:20px;";
        }
    if(Model.RichTextAndImageTitleSize>0){
        TitleStyle += $"font-size:{Model.RichTextAndImageTitleSize}px;";
    }else{
        TitleStyle += $"font-size:28px;";
    }
}
<head>
    <link href="~/Styles/textAndImage.css" rel="stylesheet">
</head>
<div class="card mb-3 bg-transparent ms-card">
    <div class="row g-0 m-5">
        <div class="col text-start">
            @if (!String.IsNullOrWhiteSpace(Model.RichTextAndImageTitle))
            {
                <h3 class="column-title" style="@TitleStyle">@Model.RichTextAndImageTitle</h3>
            }

            <div style="@TextStyle">
                <p class="card-text " >@Html.Raw(Model.RichTextAndImageItemText)</p>
            </div>
        </div>
         @if (Model.RichTextAndImageItemImage is not null)

        {
            <div class="col-md-5 mt-2 px-4">
                <a href="@Model.RichTextAndImageItemUrl?.Url">
                    <img src="@Model.RichTextAndImageItemImage.Url()" class="img-fluid" alt="...">
                </a>
            </div>
        }
    </div>
</div>