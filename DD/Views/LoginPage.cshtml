@using Umbraco.Cms.Web.Common.PublishedModels;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.LoginPage>

@{
    Layout = "Main.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Styles/LoginPage.css" />
</head>

<div class="login-container text-center">
    @if (Model.Logo != null)
    {
        <img src="@Model.Logo.Url" alt="Logotipo Gobierno Municipal de Chihuahua" class="login-logo" />
    }
    else
    {
        <p>No se ha configurado un logotipo.</p>
    }

    <h1 class="login-h1">@Model.Title</h1>
    <h2 class="login-h2">@Model.Subtitle</h2>

    <form id="loginForm" method="post" action="/login/submit">
        <div class="login-form-group">
            <label for="email">Correo electrónico</label>
            <input type="email" id="email" name="email" required />
        </div>

        <div class="login-form-group">
            <label for="password">Contraseña</label>
            <input type="password" id="password" name="password" required />
        </div>

        <div class="login-form-group">
            <a href="@Model.RecoveryUrl" class="login-forgot-password-link">¿Olvidaste tu contraseña?</a>
        </div>

        <div class="login-form-group">
            <input type="checkbox" id="rememberMe" name="rememberMe" />
            <label for="rememberMe">Recordarme en este dispositivo</label>
        </div>

        <div class="login-action-buttons">
            <button type="submit" class="login-button">Iniciar Sesión</button>

            @if (Model.RegistrationPage != null && Model.RegistrationPage.Any())
            {
                var registrationLink = Model.RegistrationPage.FirstOrDefault().Url;
                <a href="@registrationLink" class="login-register-button">
                    <button type="button" class="login-button">Crear Usuario</button>
                </a>
            }
            else
            {
                <p>No se ha configurado una página de registro.</p>
            }
        </div>
    </form>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="login-error-message">@ViewData["ErrorMessage"]</div>
    }
</div>

<div class="mt-3 p-5">
    @await Html.PartialAsync("Partials/homePage/_footer", null)
    @await Html.PartialAsync("Partials/blocklist/_socialMediaItems", null)
</div>
